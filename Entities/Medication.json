{
  "name": "Medication",
  "type": "object",
  "properties": {
    "medication_name": {
      "type": "string",
      "description": "Name of the medication"
    },
    "dosage": {
      "type": "string",
      "description": "Medication dosage (e.g., 10mg)"
    },
    "frequency": {
      "type": "string",
      "enum": [
        "once_daily",
        "twice_daily",
        "three_times_daily",
        "four_times_daily",
        "as_needed",
        "weekly",
        "monthly"
      ],
      "description": "How often to take the medication"
    },
    "times_to_take": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Specific times to take medication (e.g., ['08:00', '20:00'])"
    },
    "start_date": {
      "type": "string",
      "format": "date",
      "description": "When to start taking the medication"
    },
    "end_date": {
      "type": "string",
      "format": "date",
      "description": "When to stop taking the medication"
    },
    "prescribed_by": {
      "type": "string",
      "description": "Doctor who prescribed the medication"
    },
    "purpose": {
      "type": "string",
      "description": "What the medication is for"
    },
    "side_effects_noted": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Any side effects experienced"
    },
    "refill_reminder_date": {
      "type": "string",
      "format": "date",
      "description": "When to set up refill reminder"
    },
    "is_active": {
      "type": "boolean",
      "default": true,
      "description": "Whether currently taking this medication"
    }
  },
  "required": [
    "medication_name",
    "dosage",
    "frequency"
  ]
}